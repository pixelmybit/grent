<!-- Carousel implementation -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-container">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="INSERT_PICTURE" alt="1.">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="INSERT_PICTURE" alt="2.">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="INSERT_PICTURE" alt="3.">
      </div>
    </div>
  </div>
</div>
</div>

<!-- Booking form for Genius -->
<div class="container">
  <div class="form-wrapper">
    <h2>Book a lecture by <%= @genius.name %></h2>
    <%= render 'shared/form-lecture', genius: @genius, lecture: @lecture %>
  </div>
</div>


